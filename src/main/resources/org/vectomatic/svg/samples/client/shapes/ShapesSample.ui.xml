<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:with field='mainBundle' type='org.vectomatic.svg.samples.client.Main.MainBundle' />
	<ui:style>
	.svgContainer {
		position:absolute;
		top:1em;
		bottom:0px;
		left:0px;
		right:0px;
	}
	</ui:style>
	<g:TabLayoutPanel ui:field='tabPanel' barUnit='EM' barHeight='2'>
		<g:tab>
			<g:customHeader><g:Label styleName="{mainBundle.css.tab}">Shapes</g:Label></g:customHeader>
			<g:FlowPanel>
				<g:SimplePanel>
					<g:FlowPanel styleName="{mainBundle.css.sample}">
						<g:HTML styleName="{style.svgContainer}" ui:field="svgContainer"></g:HTML>		
					</g:FlowPanel>
				</g:SimplePanel>
			</g:FlowPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder>
