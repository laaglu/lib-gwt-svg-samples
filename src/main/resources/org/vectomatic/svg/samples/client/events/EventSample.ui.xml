<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:SimplePanel ui:field='panel'>
		<g:TabPanel ui:field='tabPanel' width="100%">
			<g:Tab>
				<g:VerticalPanel>
					<g:HTML ui:field="svgContainer"></g:HTML>
					<g:Label>Click the circle to change its color. Drag the square around</g:Label>
				</g:VerticalPanel>
			</g:Tab>
			<g:Tab>
				<g:VerticalPanel>
					<g:HTML ui:field="source" />
				</g:VerticalPanel>
			</g:Tab>
			<g:Tab>
				<g:VerticalPanel>
					<g:HTML ui:field="uiBinder" />
				</g:VerticalPanel>
			</g:Tab>
		</g:TabPanel>
	</g:SimplePanel>
</ui:UiBinder>
